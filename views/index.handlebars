<h1>Burger Creator/Destroyer</h1>

<h2>Burger List</h2>

<ul>
  {{#each burgers}}
    <button class="eat-burger" data-id="{{id}}" data-eaten="{{devour}}">Eat the Burger</button>
  {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{ sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>